<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/aliceblue"
    >

    <TextView
        android:id="@+id/Tv_uno"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_margin="5sp"
        android:gravity="center"
        android:text="@string/mi_calculadora"
        android:textColor="@color/black"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/Tv_Dos"
        android:layout_width="match_parent"
        android:layout_marginLeft="17sp"
        android:layout_height="64dp"
        android:gravity="left"
        android:hint="0"
        android:textSize="40dp" />



    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_7"
            android:layout_marginLeft="17sp"
            android:layout_marginRight="3sp"
            android:layout_width="80dp"
            android:layout_height="115dp"
            android:text="7"
            android:textColor="@color/white"
            android:backgroundTint="@color/fuchsia"/>
        <Button
            android:id="@+id/button_8"
            android:layout_width="80dp"
            android:layout_marginRight="3sp"
            android:layout_height="115dp"
            android:text="8"
            android:textColor="@color/white"
            android:backgroundTint="@color/fuchsia"/>
        <Button
            android:id="@+id/button_9"
            android:layout_width="80dp"
            android:layout_marginRight="3sp"
            android:layout_height="115dp"
            android:text="9"
            android:textColor="@color/white"
            android:backgroundTint="@color/fuchsia"/>

        <Button
            android:id="@+id/button_mas"
            android:layout_width="80dp"
            android:layout_marginRight="3sp"
            android:layout_height="115dp"
            android:text="+"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple"/>
    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_4"
            android:layout_marginLeft="17sp"
            android:layout_width="80dp"
            android:layout_marginRight="3sp"
            android:layout_height="115dp"
            android:text="4"
            android:textColor="@color/white"
            android:backgroundTint="@color/fuchsia"/>
        <Button
            android:id="@+id/button_5"
            android:layout_width="80dp"
            android:layout_marginRight="3sp"
            android:layout_height="115dp"
            android:text="5"
            android:textColor="@color/white"
            android:backgroundTint="@color/fuchsia"/>
        <Button
            android:id="@+id/button_6"
            android:layout_width="80dp"
            android:layout_marginRight="3sp"
            android:layout_height="115dp"
            android:text="6"
            android:textColor="@color/white"
            android:backgroundTint="@color/fuchsia"/>

        <Button
            android:id="@+id/button_menos"
            android:layout_width="80dp"
            android:layout_marginRight="3sp"
            android:layout_height="115dp"
            android:text="-"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple"/>
    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_3"
            android:layout_marginLeft="17sp"
            android:layout_width="80dp"
            android:layout_marginRight="3sp"
            android:layout_height="115dp"
            android:text="3"
            android:textColor="@color/white"
            android:backgroundTint="@color/fuchsia"/>
        <Button
            android:id="@+id/button_2"
            android:layout_width="80dp"
            android:layout_marginRight="3sp"
            android:layout_height="115dp"
            android:text="2"
            android:textColor="@color/white"
            android:backgroundTint="@color/fuchsia"/>
        <Button
            android:id="@+id/button_1"
            android:layout_width="80dp"
            android:layout_marginRight="3sp"
            android:layout_height="115dp"
            android:text="1"
            android:textColor="@color/white"
            android:backgroundTint="@color/fuchsia"/>

        <Button
            android:id="@+id/button_por"
            android:layout_width="80dp"
            android:layout_marginRight="3sp"
            android:layout_height="115dp"
            android:text="*"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple"/>
    </RadioGroup>


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_punto"
            android:layout_marginLeft="17sp"
            android:layout_marginRight="3sp"
            android:layout_width="80dp"
            android:layout_height="115dp"
            android:text="DEL"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple"/>
        <Button
            android:id="@+id/button_0"
            android:layout_width="80dp"
            android:layout_marginRight="3sp"
            android:layout_height="115dp"
            android:text="0"
            android:textColor="@color/white"
            android:backgroundTint="@color/fuchsia"/>
        <Button
            android:id="@+id/button_igual"
            android:layout_width="80dp"
            android:layout_marginRight="3sp"
            android:layout_height="115dp"
            android:text="="
            android:textColor="@color/white"
            android:backgroundTint="@color/purple"/>

        <Button
            android:id="@+id/button_division"
            android:layout_width="80dp"
            android:layout_marginRight="3sp"
            android:layout_height="115dp"
            android:text="/"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple"/>
    </RadioGroup>





</LinearLayout>